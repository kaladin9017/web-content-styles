<!DOCTYPE html>
<html>
<head>
  <title><%if (typeof pageTitle !== 'undefined') {%><%= pageTitle %><% } else { %>Shine<% } %></title>

<%
var ARTICLE_SHARE_DESCRIPTION = 'Career and life advice from real people. Get daily fulfillment and read up on how to live your best life.';
var ARTICLE_SHARE_IMAGE = 'https://images.contentful.com/awpxl2koull4/FFhnW3pbga4qmCOM24kmc/8c718dac9a5357db86c55b637461f4f3/Shine-logo-web.png';
var ARTICLE_SHARE_TITLE = 'Shine Advice';
var ARTICLE_SHARE_URL = 'http://advice.shinetext.com/' + articleUrlPath;

if (typeof articleDescription !== 'undefined') { ARTICLE_SHARE_DESCRIPTION = articleDescription; }
if (typeof articleHeaderPhoto !== 'undefined') { ARTICLE_SHARE_IMAGE = articleHeaderPhoto; }
if (typeof articleTitle !== 'undefined') { ARTICLE_SHARE_TITLE = articleTitle + ' | Shine'; }
%>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="description" content="<%= ARTICLE_SHARE_DESCRIPTION %>" />

  <meta property="og:url" content="<%= ARTICLE_SHARE_URL %>" />
  <meta property="og:title" content="<%= ARTICLE_SHARE_TITLE %>" />
  <meta property="og:description" content="<%= ARTICLE_SHARE_DESCRIPTION %>" />
  <meta property="og:site_name" content="Shine" />
  <meta property="og:image" content="<%= ARTICLE_SHARE_IMAGE %>" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:description" content="<%= ARTICLE_SHARE_DESCRIPTION %>" />
  <meta name="twitter:image" content="<%= ARTICLE_SHARE_IMAGE %>" />
  <meta name="twitter:site" content="@ShineText" />
  <meta name="twitter:title" content="<%= ARTICLE_SHARE_TITLE %>" />

  <link href="https://fonts.googleapis.com/css?family=Caveat+Brush" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Karla:400,400i,700" rel="stylesheet" type="text/css">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

  <link href="<%= css %>" rel="stylesheet">

  <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

  <script>
    window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;
    ga('create', 'UA-68971267-1', 'auto');
    ga('require', 'eventTracker');
    ga('send', 'pageview');

  </script>
  <script async src='https://www.google-analytics.com/analytics.js'></script>
  <script async src='https://cdnjs.cloudflare.com/ajax/libs/autotrack/1.0.1/autotrack.js'></script>
</head>
<body id="shine-article">
  <div class="navbar">
    <a href="http://www.shinetext.com">
      <img class="shine-logo" src="https://images.contentful.com/awpxl2koull4/FFhnW3pbga4qmCOM24kmc/8c718dac9a5357db86c55b637461f4f3/Shine-logo-web.png?w=100">
    </a>

    <div class="navbar-links-container">
      <div class="navbar-links"><a href="/">Get Advice</a></div>
      <div class="navbar-links"><a href="http://www.shinetext.com/referrals">Invite Friends</a></div>
      <div class="navbar-links"><a href="http://www.shinetext.com/squad">The Squad</a></div>
      <div class="navbar-links"><a class="nav-button" href="https://talk.shinetext.com">Shine Talk</a></div>
    </div>
    <i id="mobile-menu-button" class="fa fa-bars" aria-hidden="true"></i>
  </div>
  <div id="mobile-menu">
    <i id="mobile-menu-button-close" class="fa fa-times" aria-hidden="true"></i>
    <ul>
      <li><a href="/">Get Advice</a></li>
      <li><a href="http://www.shinetext.com/referrals">Invite Friends</a></li>
      <li><a href="http://www.shinetext.com/squad">The Squad</a></li>
      <li><a href="https://talk.shinetext.com">Shine Talk</a></li>
    </ul>
  </div>

  <div class="container-header"
    style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.5))<% if (typeof articleHeaderPhoto !== 'undefined') { %>,url(<%= articleHeaderPhoto %>?w=1440)<% } %>;"
    data-68="transform: translate3d(0px,0%,0px)"
    data-500="transform: translate3d(0px,100%,0px)">
    <% if (typeof articleCategory !== 'undefined') { %>
    <!-- <div class="category"><%= articleCategory %></div> -->
    <% } %>

    <div class="article-header-text">
      <h1 class="title"><%= articleTitle %></h1>

      <% if (articleAuthor && articleAuthor.name) { %>
      <div class="-author">
        By <%= articleAuthor.name %>
      </div>
      <% } %>
    </div>
  </div>

  <div class="container-fluid main-content">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <div class="row pre-article">
        <% if (articleAuthor.picture && articleAuthor.picture.file) { %>
        <div id="header-author-photo">
          <img src="https:<%= articleAuthor.picture.file.url %>?fit=thumb&w=100&h=100">
        </div>
        <% } %>

        <!-- <div id="date"><%= articleDate %></div> -->
        <div class="social-tags-container">
          <div class="social-container col-xs-12 col-xs-offset-0 col-md-6">
            <a class="icon-facebook social-icon" href="http://www.facebook.com/sharer/sharer.php?u=<%= ARTICLE_SHARE_URL %>&title=<%= ARTICLE_SHARE_TITLE %>&picture=<%= ARTICLE_SHARE_IMAGE %>&description=<%= ARTICLE_SHARE_DESCRIPTION %>" target="_blank"
              ga-on="click"
              ga-event-category="Share"
              ga-event-action="facebook"
              ga-event-label="<%= articleUrlPath %>"></a>
            <a class="icon-twitter social-icon" href="http://twitter.com/share?via=ShineText&url=<%= ARTICLE_SHARE_URL %>&text=<%= encodeURIComponent(articleTitle) %>" target="_blank"
              ga-on="click"
              ga-event-category="Share"
              ga-event-action="twitter"
              ga-event-label="<%= articleUrlPath %>"></a>
            <a class="icon-pinterest social-icon" data-pin-do="buttonPin" data-pin-tall="true" data-pin-round="true" data-pin-save="false" href="https://www.pinterest.com/pin/create/button/?url=<%= ARTICLE_SHARE_URL %>&media=<%= ARTICLE_SHARE_IMAGE %>&description=<%= ARTICLE_SHARE_DESCRIPTION %>" target="_blank"
              ga-on="click"
              ga-event-category="Share"
              ga-event-action="pinterest"
              ga-event-label="<%= articleUrlPath %>"></a>
            <a class="icon-linkedin social-icon" href="https://www.linkedin.com/shareArticle?mini=true&url=<%= ARTICLE_SHARE_URL %>&title=<%= articleTitle %>" target="_blank"
              ga-on="click"
              ga-event-category="Share"
              ga-event-action="linkedin"
              ga-event-label="<%= articleUrlPath %>"></a>
            <a class="icon-email social-icon" href="mailto:?subject=<%= articleTitle %>&body=<%= ARTICLE_SHARE_URL %>" rel="external"
              ga-on="click"
              ga-event-category="Share"
              ga-event-action="email"
              ga-event-label="<%= articleUrlPath %>"></a>
          </div>

          <div class="tags-container col-xs-12 col-xs-offset-0 col-md-6">
            <img class="tags-pin" src="https://images.contentful.com/awpxl2koull4/6YLMyJkVLaWA8giwgIaqIe/1127aa4d12a5121257b3318d3d06dc4e/tag-pin.png">

            <div class="tags">
            <% for (var i=0; i < articleTags.length; i++) { %>
              <%= articleTags[i] %><%if (i < articleTags.length - 1) {%>, <% } %>
            <% } %>
            </div>
          </div>
        </div>
      </div>

      <div id="article-body">
        <%- articleBody %>
      </div>

      <div class="post-article">
        <div class="social-container">
          <a class="icon-facebook social-icon" href="http://www.facebook.com/sharer/sharer.php?u=<%= ARTICLE_SHARE_URL %>&title=<%= ARTICLE_SHARE_TITLE %>&picture=<%= ARTICLE_SHARE_IMAGE %>&description=<%= ARTICLE_SHARE_DESCRIPTION %>" target="_blank"
            ga-on="click"
            ga-event-category="Share"
            ga-event-action="facebook"
            ga-event-label="<%= articleUrlPath %>"></a>
          <a class="icon-twitter social-icon" href="http://twitter.com/share?via=ShineText&url=<%= ARTICLE_SHARE_URL %>&text=<%= encodeURIComponent(articleTitle) %>" target="_blank"
            ga-on="click"
            ga-event-category="Share"
            ga-event-action="twitter"
            ga-event-label="<%= articleUrlPath %>"></a>
          <a class="icon-pinterest social-icon" href="https://www.pinterest.com/pin/create/button/?url=<%= ARTICLE_SHARE_URL %>&media=<%= ARTICLE_SHARE_IMAGE %>&description=<%= ARTICLE_SHARE_DESCRIPTION %>" target="_blank"
            ga-on="click"
            ga-event-category="Share"
            ga-event-action="pinterest"
            ga-event-label="<%= articleUrlPath %>"></a>
          <a class="icon-linkedin social-icon" href="https://www.linkedin.com/shareArticle?mini=true&url=<%= ARTICLE_SHARE_URL %>&title=<%= articleTitle %>" target="_blank"
            ga-on="click"
            ga-event-category="Share"
            ga-event-action="linkedin"
            ga-event-label="<%= articleUrlPath %>"></a>
          <a class="icon-email social-icon" href="mailto:?subject=<%= articleTitle %>&body=<%= ARTICLE_SHARE_URL %>" rel="external"
            ga-on="click"
            ga-event-category="Share"
            ga-event-action="email"
            ga-event-label="<%= articleUrlPath %>"></a>
        </div>

        <div class="tags-container">
          <div class="tags">
          <% for (var i=0; i < articleTags.length; i++) { %>
            <%= articleTags[i] %><%if (i < articleTags.length - 1) {%>, <% } %>
          <% } %>
          </div>
          <img class="tags-pin" src="https://images.contentful.com/awpxl2koull4/6YLMyJkVLaWA8giwgIaqIe/1127aa4d12a5121257b3318d3d06dc4e/tag-pin.png">
        </div>
      </div> <!-- end post-article -->

      <div class="author-section">
        <div class="-photo-container">
          <img src="https:<%= articleAuthor.picture.file.url %>?fit=thumb&w=100&h=100">
        </div>
        <div class="-info-container">
          <div class="-name">Author: <%= articleAuthor.name %></div>
          <div class="-bio"><%- articleAuthor.bio %></div>

          <div class="-social-links-container">
            <% if (articleAuthor.facebook) { %>
            <a class="-social-link" href="https://www.facebook.com/<%= articleAuthor.facebook %>" target="_blank">Facebook</a>
            <% } %>

            <% if (articleAuthor.twitter) { %>
            <a class="-social-link" href="https://www.twitter.com/<%= articleAuthor.twitter %>" target="_blank">Twitter</a>
            <% } %>

            <% if (articleAuthor.instagram) { %>
            <a class="-social-link" href="https://www.instagram.com/<%= articleAuthor.instagram %>" target="_blank">Instagram</a>
            <% } %>

            <% if (articleAuthor.linkedin) { %>
            <a class="-social-link" href="https://linkedin.com/in/<%= articleAuthor.linkedin %>" target="_blank">LinkedIn</a>
            <% } %>
          </div>
        </div>
      </div> <!-- end author-section -->

    </div>

    <div id="sticky-footer">
      <div class="sticky-message">Get daily affirmations texted to you!</div>
      <a href="http://www.shinetext.com"
        ga-on="click"
        ga-event-category="CTA"
        ga-event-action="sticky signup"
        ga-event-label="<%= articleUrlPath %>">
        <div class="signup-button">Sign Up</div>
      </a>
    </div>

    <footer>
      <div class="footer-cta">
        <div class="cta-heading">Like what you read?</div>
        <div class="cta-copy">Get Shine now for daily affirmations on your phone!</div>
        <a href="http://www.shinetext.com"
          ga-on="click"
          ga-event-category="CTA"
          ga-event-action="signup"
          ga-event-label="<%= articleUrlPath %>">
          <div class="signup-button">Sign Up</div>
        </a>
      </div>

      <div class="social-and-footer-nav">
        <div class="-social-icons">
          <a class="-icon-facebook" href="https://www.facebook.com/Shine-Text" target="_blank"></a>
          <a class="-icon-instagram" href="https://instagram.com/ShineText" target="_blank"></a>
          <a class="-icon-twitter" href="https://twitter.com/ShineText" target="_blank"></a>
        </div>
        <div class="page-links">
          <a href="/">Get Advice</a>
          <a href="http://www.shinetext.com/referrals">Invite Friends</a>
          <a href="http://www.shinetext.com/squad">The Squad</a>
          <a href="http://www.shinetext.com/faq">FAQ</a>
          <a href="http://www.shinetext.com/privacy-policy">Privacy Policy</a>
          <a href="http://www.shinetext.com/terms-of-service">Terms of Service</a>
        </div>
      </div>
    </footer>
  </div> <!-- end main container-fluid -->

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/skrollr/0.6.30/skrollr.min.js"></script>
  <script type="text/javascript">
  var s = skrollr.init();
  if (s.isMobile()) { // but only on non-mobile devices
    s.destroy();
  }

  // Display sticky footer after scrolling past header section
  $(window).scroll(function() {
    if ($(window).scrollTop() > 480) {
      $('#sticky-footer').addClass('show');
    }
    else {
      $('#sticky-footer').removeClass('show');
    }
  });
  </script>
  <script src="<% if (typeof jsPath !== 'undefined') { %><%= jsPath %><% } %>/js/navbar.js"></script>

</body>
</html>